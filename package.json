				{
					"when": "resourceLangId == formattxt",
					"command": "Extension.dltxt.core.context.autoDetectFormatContinue",
					"group": "dltxt.extract"
				},
				{
					"when": "resourceLangId == dltxt",
					"command": "Extension.dltxt.copy_original",
					"group": "dltxt.edit"
