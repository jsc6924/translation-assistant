				"dltxt.core.x.originalTextWhite": {
					"type": "string",
					"default": "\\s*[「]?",
					"description": "原文每行的前缀"
				},
				"dltxt.core.x.translatedTextWhite": {
					"type": "string",
					"default": "\\s*[「]?",
					"description": "译文每行的前缀"
				},
				"dltxt.core.y.originalTextSuffix": {
					"type": "string",
					"default": "[」]?",
					"description": "原文每行的后缀"
