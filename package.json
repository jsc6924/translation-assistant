{
	"name": "translateassistant",
	"displayName": "DLTXT: 双行文本翻译解决方案",
	"publisher": "jsc723",
	"icon": "assets/logo.png",
	"description": "",
	"version": "3.25.2",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [ 
		"onLanguage:dltxt",
		"onLanguage:sltxt"
	],
	"main": "./out/main.js",
	"contributes": {
		"languages": [
			{
				"id": "dltxt",
				"aliases": [
					"Double Line TXT for translation"
				],
				"extensions": [
					".txt"
				]
			},
			{
				"id": "sltxt",
				"aliases": [
					"Single Line TXT translation extracted from dltxt"
				],
				"extensions": [
					".txt.sl"
				]
			},
			{
				"id": "formattxt",
				"aliases": [
					"dltxt auto format detector temporary file"
				],
				"extensions": [
					".txt.format"
				]
			}
		],
		"grammars": [
			{
				"language": "dltxt",
				"scopeName": "source.txt",
				"path": "./syntaxes/dltxt.tmLanguage.json"
			}
		],
		"themes": [
			{
				"label": "DLTXT Dark+",
				"uiTheme": "vs-dark",
				"path": "themes/dltxt_dark.json"
			},
			{
				"label": "DLTXT Light+",
				"uiTheme": "vs",
				"path": "themes/dltxt_light.json"
			}
		],
		"colors": [
			{
				"id": "myextension.largeNumberBackground",
				"description": "Background decoration color for large numbers",
				"defaults": {
					"dark": "#FF000055",
					"light": "#FF000055",
					"highContrast": "#FF000055"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "dltxt-view-container",
					"title": "dltxt",
					"icon": "assets/logo.png"
				}
			]
		},
		"views": {
			"dltxt-view-container": [
				{
					"id": "dltxt-clipboard",
					"name": "剪贴板"
				},
				{
					"id": "dltxt-dict",
					"name": "术语库"
				},
				{
					"id": "dltxt-trdb",
					"name": "翻译数据库"
				},
				{
					"id": "dltxt-configs-commands",
					"name": "设置与命令"
				}
			]
		},
		"commands": [
			{
				"command": "Extension.dltxt.copyToClipboard",
				"title": "复制到剪贴板",
				"category": "DLTXT",
				"args": [
					{
						"name": "text",
						"type": "string",
						"description": "Text to copy"
					}
				]
			},
			{
				"command": "Extension.dltxt.replaceAllKeywordsAtCurrentPosition",
				"title": "替换当前光标上的全部关键字",
				"category": "DLTXT"
			},
			{
				"command": "Extension.dltxt.replaceAllInLine",
				"title": "指定行内全部替换",
				"category": "DLTXT",
				"args": [
					{
						"name": "old_text",
						"type": "string",
						"description": "original text"
					},
					{
						"name": "new_text",
						"type": "string",
						"description": "new text"
					},
					{
						"name": "line",
						"type": "number",
						"description": "line number"
					}
				]
			},
			{
				"command": "Extension.dltxt.sync_all_database",
				"title": "重新加载全部术语库",
				"category": "DLTXT",
				"icon": {
					"dark": "icons/dark/sync.svg",
					"light": "icons/light/sync.svg"
				}
			},
			{
				"command": "Extension.dltxt.context_menu_insert",
